{% extends 'base.html.twig' %}

{% block title %}Residents{% endblock %}

{% block body %}
    <h1>Residents</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ resident.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ resident.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ resident.type }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ resident.birthDate ? resident.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ resident.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ resident.description }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btnV">
    <a href="{{ path('app_residents_crud_new') }}">Create new</a>
    </button>

    <button class="btnS">
    <a href="{{ path('app_residents_crud_index') }}">back to list</a>
    </button>

    <button class="btnV">
    <a href="{{ path('app_residents_crud_edit', {'id': resident.id}) }}">edit</a>
    </button>
    {{ include('residents_crud/_delete_form.html.twig') }}
{% endblock %}
